{
  "_schemaVersion": "1.0.0",
  "simulate":
  {
     "inputs":
     [
        {"name":"time"          ,"kind":"required" , "type":["numeric"]                                 , "purpose":"Simulation time"},
        {"name":"u"             ,"kind":"ordered"  , "type":["numeric"]                                 , "purpose":"Input Value"},
        {"name":"u_idx"         ,"kind":"ordered"  , "type":["numeric"]                                 , "purpose":"Number of the device to which the input is applied"},
        {"name":"x0_sys"        ,"kind":"namevalue", "type":["numeric"]                                 , "purpose":"Initial value of component state (vector)"},
        {"name":"V0"            ,"kind":"namevalue", "type":["numeric"]                                 , "purpose":"Initial value of Bus Voltage (vector)"},
        {"name":"I0"            ,"kind":"namevalue", "type":["numeric"]                                 , "purpose":"Initial value of Bus Current (vector)"},
        {"name":"x0_con_local"  ,"kind":"namevalue", "type":["numeric"]                                 , "purpose":"Initial value of local controller state (vector)"},
        {"name":"x0_con_global" ,"kind":"namevalue", "type":["numeric"]                                 , "purpose":"Initial value of global controller state (vector)"},
        {"name":"AbsRel"        ,"kind":"namevalue", "type":["numeric"]                                 , "purpose":"ode option"},
        {"name":"Reltol"        ,"kind":"namevalue", "type":["numeric"]                                 , "purpose":"ode option"},
        {"name":"reset_time"    ,"kind":"namevalue", "type":["cell","char","string"]                    , "purpose":"Simulation Time Limits"},
        {"name":"fault"         ,"kind":"namevalue", "type":["cell","table","struct"]                   , "purpose":"fault condition setting"},
        {"name":"OutputFcn"     ,"kind":"namevalue", "type":["logical"]                                 , "purpose":"odde option"},
        {"name":"grid_code"     ,"kind":"namevalue", "type":["choices={'ignore','monitor','control'}"]  , "purpose":"Grid code options"},
        {"name":"method"        ,"kind":"namevalue", "type":["choices={'zoh','foh'}"]                   , "purpose":"Input Waveform(zoh:zero-order hold/foh:first-order-hold)"},
        {"name":"linear"        ,"kind":"namevalue", "type":["choices={true,false}"]                    , "purpose":"Simulate on approximate linear systems."},
        {"name":"do_report"     ,"kind":"namevalue", "type":["choices={true,false}"]                    , "purpose":"Display of analysis progress in command window"},
        {"name":"do_retry"      ,"kind":"namevalue", "type":["choices={true,false}"]                    , "purpose":"Retry simulation if reset_time is exceeded"},
        {"name":"tools"         ,"kind":"namevalue", "type":["choices={true,false}"]                    , "purpose":"Use simulation result tools"},
     ]
  }
}